---
import Logo from "./Logo.astro";
import { site } from "~/config";

const footerLinks: {
  title: string;
  links: { title: string; href: string }[];
}[] = [
  {
    title: "Quick Links",
    links: [
      {
        title: "Home",
        href: "/",
      },
      {
        title: "About Us",
        href: "#about",
      },
      {
        title: "Blogs",
        href: "#blogs",
      },
      {
        title: "Contact Us",
        href: "#contact",
      },
      {
        title: "Privacy Policy",
        href: "#privacy-policy",
      },
    ],
  },
  {
    title: "Categories",
    links: [
      {
        title: "Recently posted",
        href: "#recently-posted",
      },
      {
        title: "To Sell",
        href: "#to-sell",
      },
      {
        title: "To Purchase",
        href: "#to-purchase",
      },
      {
        title: "For Rental",
        href: "#for-rental",
      },
    ],
  },
  {
    title: "Help",
    links: [
      {
        title: "Privacy",
        href: "#privacy",
      },
      {
        title: "Condition",
        href: "#condition",
      },
      {
        title: "Blog",
        href: "#blog",
      },
      {
        title: "FAQ",
        href: "#faq",
      },
    ],
  },
];
---

<footer class="bg-brand-dark-1 pt-20 xl:pt-[10rem] pb-[70px] mt-auto">
  <div class="container">
    <div
      class="flex flex-col md:flex-row md:items-center max-md:gap-10 md:justify-between"
    >
      <div
        class="flex flex-col xl:flex-row xl:items-center gap-10 xl:gap-[225px]"
      >
        <Logo />

        <div class="max-w-[490px] font-sora text-lg/[26px] text-white">
          <p>
            Discover exceptional properties and expert real estate services
            tailored to your needs. Whether buying, selling, or investing, find
            your perfect.
          </p>
        </div>
      </div>

      <div class="flex items-center gap-8 md:gap-3.5">
        <a
          href={site.socials.linkedin}
          target="_blank"
          class="bg-white/20 size-10 flex items-center justify-center rounded-full"
        >

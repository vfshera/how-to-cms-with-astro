---
interface Props {
  background: ImageMetadata;
  //   icon: ImageMetadata;
  title: string;
  description: string;
  action: { title: string; href: string };
}

const { background, title, description, action } = Astro.props;
---

<div
  style={{ backgroundImage: `url(${background.src})` }}
  class="p-10 pt-40 md:p-[100px] md:pt-[340px] bg-center bg-cover bg-no-repeat space-y-8 text-white rounded-[1.25rem] relative isolate overflow-hidden"
>
  <div class="flex flex-col md:flex-row md:items-center gap-6">
    <div
      class="size-12 *:!size-6 flex items-center justify-center bg-brand-green-1 rounded-full shrink-0"
    >
      <slot name="icon" />
    </div>
    <p class="text-[2.5rem]/none">{title}</p>
  </div>

  <p class="text-lg md:text-xl">{description}</p>

  <a
    href={action.href}
    class="text-xl/none font-semibold flex items-center gap-2.5 w-max"
    >{action.title}
    <svg
      width="20"
      height="20"
      viewBox="0 0 20 20"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M14.4133 10.6633L8.16331 16.9133C7.98719 17.0894 7.74832 17.1883 7.49925 17.1883C7.25017 17.1883 7.0113 17.0894 6.83518 16.9133C6.65906 16.7372 6.56012 16.4983 6.56012 16.2492C6.56012 16.0001 6.65906 15.7613 6.83518 15.5852L12.4219 10L6.83675 4.41328C6.74954 4.32607 6.68036 4.22254 6.63317 4.1086C6.58597 3.99466 6.56168 3.87254 6.56168 3.74922C6.56168 3.62589 6.58597 3.50377 6.63317 3.38983C6.68036 3.27589 6.74954 3.17236 6.83675 3.08515C6.92395 2.99795 7.02748 2.92877 7.14142 2.88158C7.25536 2.83438 7.37748 2.81009 7.50081 2.81009C7.62414 2.81009 7.74626 2.83438 7.8602 2.88158C7.97414 2.92877 8.07767 2.99795 8.16487 3.08515L14.4149 9.33515C14.5022 9.42235 14.5714 9.52593 14.6186 9.63994C14.6658 9.75395 14.69 9.87615 14.6898 9.99954C14.6897 10.1229 14.6652 10.2451 14.6177 10.359C14.5703 10.4729 14.5008 10.5763 14.4133 10.6633Z"
        fill="white"></path>
    </svg>
  </a>

  <div
    class="absolute inset-0 -z-[1] bg-gradient-to-b from-transparent to-black opacity-70 md:opacity-40"
  >
  </div>
</div>
